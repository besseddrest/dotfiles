# GLOBAL SETTINGS #
# bsp, stack or float
yabai -m config layout bsp

yabai -m config window_placement second_child
yabai -m config window_shadow .75
yabai -m config window_animation_duration 0.3
yabai -m config window_animation_easing ease_out_quint
yabai -m config window_origin_display cursor

# padding
yabai -m config top_padding 30
yabai -m config bottom_padding 30
yabai -m config left_padding 30
yabai -m config right_padding 30
yabai -m config window_gap 30

yabai -m config mouse_follows_focus on

yabai -m config mouse_modifier alt
# left click + drag
yabai -m config mouse_action1 move
# right click + drag
yabai -m config mouse_action2 resize

yabai -m mouse_drop_action swap

# exclude
yabai -m rule --add app="System Settings$" manage=off
yabai -m rule --add app="Calculator$" manage=off
yabai -m rule --add app="SF Symbols$" manage=off
yabai -m rule --add app="Reminders$" manage=off
yabai -m rule --add app="1Password 7$" manage=off

# sketchybar
yabai -m config external_bar all:30:0
